{% if(posts) %}
<section>
    {% for post in posts %}
    <div class="post">
        <h2><a href="{{ post.url }}">{{ post.title }}</a></h2>
        <div class="meta">
            {% include 'content/blog/post/meta.html.twig' %}
        </div>
        {# todo #}
        {% if (post.excerpt) %}
            {{ post.excerpt|raw }} <a href="{{ post.url }}"> Read more</a>
        {% else %}
                {{ post.content|raw }}
        {% endif %}
    </div>
    {% endfor %}
</section>
{% else %}
    <div>
        {{ __('No Posts yet') }}
    </div>
{% endif %}

<div class="pagination">
    
    {% if (pagination.prev) %}
    <div><a href="{{ pagination.prev }}">Previous Post</a></div>
    {% endif %}

    {% if (pagination.next) %}
    <div><a href="{{ pagination.next }}">Next Post</a></div>
    {% endif %}
    
</div>