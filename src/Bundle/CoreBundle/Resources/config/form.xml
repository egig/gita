<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="dtsystem.form.type.system" class="drafterbit\Bundle\CoreBundle\Form\Type\SystemType">
            <tag name="form.type" />
            <argument type="service" id="service_container" />
        </service>

        <service id="dtsystem.form.type.frontpage" class="drafterbit\Bundle\CoreBundle\Form\Type\FrontpageType">
            <tag name="form.type" />
            <argument type="service" id="service_container" />
        </service>

    </services>
</container>
